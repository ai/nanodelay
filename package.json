{
  "name": "nanodelay",
  "version": "2.0.2",
  "description": "A tiny (37 bytes) Promise wrapper around setTimeout",
  "keywords": [
    "promise",
    "delay",
    "settimeout",
    "setTimeout",
    "wait",
    "async",
    "await",
    "esm"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/nanodelay",
  "sideEffects": false,
  "engines": {
    "node": "^12.0.0 || ^14.0.0 || >=16.0.0"
  },
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "unit": "node ./index.test.js",
    "test": "c8 pnpm unit && eslint . && size-limit"
  },
  "devDependencies": {
    "@logux/eslint-config": "^46.1.1",
    "@size-limit/preset-small-lib": "^7.0.8",
    "c8": "^7.11.0",
    "check-dts": "^0.6.6",
    "clean-publish": "^4.0.0",
    "eslint": "^8.8.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "size-limit": "^7.0.8",
    "typescript": "^4.5.5",
    "uvu": "^0.5.3"
  },
  "c8": {
    "exclude": [
      "**/*.test.*"
    ],
    "reporter": "lcov",
    "lines": 100,
    "check-coverage": true
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config"
  },
  "size-limit": [
    {
      "import": "{ delay }",
      "limit": "37 B"
    }
  ],
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "clean-publish": {
    "cleanDocs": true
  }
}
