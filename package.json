{
  "name": "nanodelay",
  "version": "1.0.1",
  "description": "A tiny (25 bytes) Promise wrapper around setTimeout",
  "keywords": [
    "promise",
    "delay",
    "settimeout",
    "setTimeout",
    "wait",
    "async",
    "await",
    "esm"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/nanodelay",
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf coverage/",
    "lint": "eslint-ci *.js test/*.js",
    "test": "jest-ci --coverage && eslint-ci . && check-dts && size-limit && yarn spell",
    "spell": "yaspeller-ci *.md"
  },
  "devDependencies": {
    "@logux/eslint-config": "^36.1.0",
    "@logux/sharec-config": "^0.5.7",
    "@size-limit/dual-publish": "^4.2.1",
    "@size-limit/preset-small-lib": "^4.2.1",
    "check-dts": "^0.1.2",
    "dual-publish": "^0.5.0",
    "eslint": "^6.8.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^16.1.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-ci": "^0.1.1",
    "lint-staged": "^10.0.8",
    "rimraf": "^3.0.2",
    "size-limit": "^4.0.0",
    "yaspeller-ci": "^1.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config"
  },
  "size-limit": [
    {
      "import": "{ delay }",
      "limit": "25 B"
    }
  ],
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint"
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "JSDoc",
      "nanodelay",
      "gzipped",
      "ES",
      "CDN",
      "ES2016"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.5.7"
  }
}
