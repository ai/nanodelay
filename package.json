{
  "name": "nanodelay",
  "version": "2.0.2",
  "description": "A tiny (25 bytes) Promise wrapper around setTimeout",
  "keywords": [
    "promise",
    "delay",
    "settimeout",
    "setTimeout",
    "wait",
    "async",
    "await",
    "esm"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/nanodelay",
  "sideEffects": false,
  "engines": {
    "node": "^12.0.0 || ^14.0.0 || >=16.0.0"
  },
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "unit": "tsm node_modules/uvu/bin.js . '\\.test\\.(ts|js)$'",
    "test": "c8 yarn unit && eslint . && check-dts && size-limit"
  },
  "devDependencies": {
    "@logux/eslint-config": "^46.1.0",
    "@size-limit/preset-small-lib": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "c8": "^7.10.0",
    "check-dts": "^0.6.3",
    "clean-publish": "^3.4.2",
    "eslint": "^8.1.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.0",
    "eslint-plugin-promise": "^5.1.1",
    "size-limit": "^6.0.4",
    "tsm": "^2.1.4",
    "typescript": "^4.4.4",
    "uvu": "^0.5.2"
  },
  "c8": {
    "exclude": [
      "**/*.test.*"
    ],
    "lines": 100,
    "check-coverage": true
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm"
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "import": "{ delay }",
      "limit": "40 B"
    }
  ],
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "clean-publish": {
    "cleanDocs": true
  }
}
