{
  "name": "nanodelay",
  "version": "1.0.2",
  "description": "A tiny (25 bytes) Promise wrapper around setTimeout",
  "keywords": [
    "promise",
    "delay",
    "settimeout",
    "setTimeout",
    "wait",
    "async",
    "await",
    "esm"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/nanodelay",
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf coverage/",
    "lint": "eslint-ci *.js test/*.js",
    "test": "jest-ci --coverage && eslint-ci . && check-dts && size-limit && yarn spell",
    "spell": "yaspeller-ci *.md"
  },
  "devDependencies": {
    "@logux/eslint-config": "^39.0.3",
    "@logux/sharec-config": "^0.7.3",
    "@size-limit/dual-publish": "^4.5.0",
    "@size-limit/preset-small-lib": "^4.5.0",
    "@types/jest": "^26.0.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "check-dts": "^0.3.0",
    "dual-publish": "^0.10.3",
    "eslint": "^7.2.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-prettierx": "^0.12.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^20.0.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-ci": "^0.1.1",
    "lint-staged": "^10.2.4",
    "rimraf": "^3.0.2",
    "size-limit": "^4.5.0",
    "ts-jest": "^26.0.0",
    "typescript": "^3.9.2",
    "yaspeller-ci": "^1.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts"
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "import": "{ delay }",
      "limit": "25 B"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint --fix"
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "JSDoc",
      "nanodelay",
      "gzipped",
      "ES",
      "CDN",
      "ES2016"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.7.3"
  }
}
